<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

    <TextView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textBackground"
            android:paddingTop="8dp"
            android:text="@string/loading_message"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/descriptionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web|email"
            android:background="@color/textBackground"
            android:ellipsize="end"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textColorLink="@color/mdtp_red"
            app:layout_constraintBottom_toTopOf="@+id/fullscreenButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/powerSavingWarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/powerSavingBackground"
            android:padding="6dp"
            android:text="@string/power_saving_warning"
            android:textColor="@android:color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/metadataBar"
            app:layout_constraintEnd_toStartOf="@id/manuallySetButton"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:id="@+id/manuallySetButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/textBackground"
            android:padding="6dp"
            android:src="@drawable/ic_manually_set"
            app:layout_constraintBottom_toTopOf="@id/metadataBar"
            app:layout_constraintEnd_toStartOf="@id/shareButton"
            app:layout_constraintVertical_bias="1.0" />

    <ImageView
            android:id="@+id/shareButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/textBackground"
            android:padding="6dp"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toTopOf="@id/metadataBar"
            app:layout_constraintEnd_toStartOf="@id/fullscreenButton"
            app:layout_constraintVertical_bias="1.0" />

    <ImageView
            android:id="@+id/fullscreenButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/textBackground"
            android:padding="2dp"
            android:src="@drawable/ic_fullscreen"
            app:layout_constraintBottom_toTopOf="@id/metadataBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    <TextView
            android:id="@+id/metadataBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textBackground"
            android:padding="8dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Group
            android:id="@+id/bottomButtonsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="fullscreenButton,shareButton,manuallySetButton" />

    <androidx.constraintlayout.widget.Group
            android:id="@+id/metadataGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="descriptionBar,metadataBar" />

</androidx.constraintlayout.widget.ConstraintLayout>