<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/backgroundImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"
            tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleBar"
            android:padding="8dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/loading_message"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@color/textBackground"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionBar"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/titleBar"
            android:textAlignment="textStart"
            android:text=""
            android:textColor="@android:color/white"
            android:background="@color/textBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fullscreenButton"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:id="@+id/fullscreenButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/metadataBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:src="@drawable/ic_fullscreen"
            android:background="@color/textBackground"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/metadataBar"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@color/textBackground"/>
    <androidx.constraintlayout.widget.Group
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/metadataGroup"
            app:constraint_referenced_ids="descriptionBar,fullscreenButton,metadataBar" />

</androidx.constraintlayout.widget.ConstraintLayout>